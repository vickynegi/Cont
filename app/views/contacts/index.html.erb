<body>


	<div class="container-contact100">
		<div class="wrap-contact100">

			<form class="contact100-form validate-form" action="/visitors/submission" method="post">
				<div clas="row">
					<div class="hi">
						<% flash.each do |key, value| %>
				      <div class="alert alert-success ">
				        <%= value %>
				      </div>
						<% end %>
					</div>
				 
					<div class="dropdown" style="position:sticky; right:0;">
					  <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" >
					    <%= t 'select_lang' %>
					  </a>

					  <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
					    <% alternate_locales do |l| %>
		  			  	<li class="dropdown-item <%= l %>"><%= link_to(l[0],locale: l[1]) %></li>
							<% end %>
					  </div>
					</div>
			  </div>
				<br>
				<br>
				<span class="contact100-form-title">
					<%= t 'send_us_msg' %>
				</span>
				<input id="locale" class="input100" type="text" name="locale" value= "<%= params[:locale] || I18n.default_locale %>" style="display: none;">
				<label class="label-input100" for="first-name">	<%= t 'tell_name' %> *</label>
				<div class="wrap-input100 rs1-wrap-input100 validate-input" data-validate='<%= t 'validation_msg.type_first_name' %>' >
					<input id="first-name" class="input100" type="text" name="first_name" placeholder='<%= t 'first_name' %>'>
					<span class="focus-input100"></span>
				</div>
				<div class="wrap-input100 rs2-wrap-input100 validate-input" data-validate='<%= t 'validation_msg.type_last_name' %>' >
					<input class="input100" type="text" name="last_name" placeholder='<%= t 'last_name' %>'>
					<span class="focus-input100"></span>
				</div>

				<label class="label-input100" for="email"> <%= t 'email_id' %> *</label>
				<div class="wrap-input100 validate-input" data-validate = "<%= t 'validation_msg.email_id' %>: ex@abc.xyz">
					<input id="email" class="input100" type="text" name="email" placeholder="Eg. example@email.com">
					<span class="focus-input100"></span>
				</div>

				<label class="label-input100" for="phone"><%= t 'phone_no' %></label>
				<div class="wrap-input100">
					<input id="phone" class="input100" type="text" name="phone" placeholder="Eg. +1 800 000000">
					<span class="focus-input100"></span>
				</div>

				<label class="label-input100" for="message"> <%= t 'msg' %> * </label>
				<div class="wrap-input100 validate-input" data-validate = '<%= t 'validation_msg.msg' %>' >
					<textarea id="message" class="input100" name="message" placeholder='<%= t 'write_msg' %>'></textarea>
					<span class="focus-input100"></span>
				</div>

				<div class="container-contact100-form-btn">
					<button class="contact100-form-btn">
						<%= t 'send_msg' %>
					</button>
				</div>
			</form>

			<div class="contact100-more flex-col-c-m" style="background-image: url('/assets/bg-01.jpg');">
				<div class="flex-w size1 p-b-47">
					<div class="txt1 p-r-25">
						<span class="lnr lnr-map-marker"></span>
					</div>

					<div class="flex-col size2">
						<span class="txt1 p-b-20">
							<%= t 'address' %>
						</span>

						<span class="txt2">
							Mada Center 8th floor, 379 Hudson St, New York, NY 10018 US
						</span>
					</div>
				</div>

				<div class="dis-flex size1 p-b-47">
					<div class="txt1 p-r-25">
						<span class="lnr lnr-phone-handset"></span>
					</div>

					<div class="flex-col size2">
						<span class="txt1 p-b-20">
							<%= t 'talk' %>
						</span>

						<span class="txt3">
							+1 800 1236879
						</span>
					</div>
				</div>

				<div class="dis-flex size1 p-b-47">
					<div class="txt1 p-r-25">
						<span class="lnr lnr-envelope"></span>
					</div>

					<div class="flex-col size2">
						<span class="txt1 p-b-20">
							<%= t 'support' %>
						</span>

						<span class="txt3">
							contact@example.com
						</span>
					</div>
				</div>
			</div>
		</div>
